# Docker-specific environment settings
# --------------------------------
# This file contains only the settings that differ from .env.template for Docker deployment

# Environment settings
FLASK_ENV=production
FLASK_DEBUG=0

# Docker-specific server settings
HOST=0.0.0.0
PORT=5000

# Security for Docker
# Generate secure keys with:
# python -c "import secrets; print(f'SECRET_KEY={secrets.token_hex(32)}')"
# python -c "import secrets; print(f'CONFIG_KEY={secrets.token_hex(32)}')"
SECRET_KEY=change-this-in-production-to-a-random-value
CONFIG_KEY=change-this-in-production-to-another-random-value

# Docker logging
LOG_LEVEL=INFO

# Flask application settings
FLASK_APP=app:create_app()

# Paths - DO NOT CHANGE for Docker deployment
CONFIG_PATH=instance/config.json
DB_PATH=instance/vault.db

# Security settings
PBKDF2_ITERATIONS=100000
DEFAULT_PASSWORD_LENGTH=16

# Logging
LOG_FILE=logs/password_manager.log

# Session
SESSION_TIMEOUT_MINUTES=30 